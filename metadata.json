        "observables": ["magnetization", "staggered_magnetization", "density"]
      },
      "correlation_functions": {
        "file": "data/raw_data/correlation_functions.npz",
        "description": "Two-point correlation functions for spin and density",
        "types": ["spin-spin", "density-density"]
      },
      "entanglement": {
        "file": "data/raw_data/entanglement.npz",
        "description": "Entanglement entropy, Renyi entropy, and Schmidt gap",
        "measures": ["von_Neumann", "Renyi", "Schmidt_gap"]
      }
    },
    "processed_data": {
      "phase_diagram": {
        "file": "data/processed_data/phase_diagram.csv",
        "description": "Critical points and phase boundaries",
        "format": "CSV"
      },
      "fss_data": {
        "file": "data/processed_data/fss_data.npz",
        "description": "Finite-size scaling collapsed data",
        "exponents": ["nu", "beta", "gamma"]
      },
      "critical_exponents": {
        "file": "data/processed_data/critical_exponents.json",
        "description": "Extracted critical exponents with uncertainties",
        "format": "JSON"
      },
      "factorization": {
        "file": "data/processed_data/factorization.csv",
        "description": "Factorization transition points and entanglement measures",
        "format": "CSV"
      }
    }
  },
  "numerical_methods": {
