  "datasets": {
    "raw_data": {
      "ground_state_energies": {
        "file": "data/raw_data/ground_state_energies.npz",
        "description": "Ground state energies for various system sizes and coupling parameters",
        "size_range": [8, 32],
        "parameter_range": {
          "g": [0.0, 2.0],
          "step": 0.02
        }
      },
      "order_parameters": {
        "file": "data/raw_data/order_parameters.npz",
